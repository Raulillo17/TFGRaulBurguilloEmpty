<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="190dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_1" />

    <TextView
        android:id="@+id/tvNombreDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tvPuntos"
        android:layout_width="56dp"
        android:layout_height="19dp"
        android:text="PPG"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/tvAsistencias"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/tvAsistencias"
        android:layout_width="58dp"
        android:layout_height="22dp"
        android:text="APG"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tvAsistenciasDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreDetail"
        tools:layout_editor_absoluteX="176dp" />

    <TextView
        android:id="@+id/tvRebotes"
        android:layout_width="63dp"
        android:layout_height="22dp"
        android:text="RPG"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAsistencias"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/tvPuntosDetail"
        android:layout_width="59dp"
        android:layout_height="39dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/tvAsistenciasDetail"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="288dp" />

    <TextView
        android:id="@+id/tvAsistenciasDetail"
        android:layout_width="58dp"
        android:layout_height="39dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreDetail"
        tools:layout_editor_absoluteX="176dp" />

    <TextView
        android:id="@+id/tvRebotesDetail"
        android:layout_width="62dp"
        android:layout_height="40dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/tvAsistenciasDetail"
        tools:layout_editor_absoluteY="285dp" />

    <TextView
        android:id="@+id/tvDescripcionDetail"
        android:layout_width="333dp"
        android:layout_height="129dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="351dp" />

    <VideoView
        android:id="@+id/vvPlayerDetail"
        android:layout_width="412dp"
        android:layout_height="184dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescripcionDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>