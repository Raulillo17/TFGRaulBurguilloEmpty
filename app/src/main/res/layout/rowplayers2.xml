<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#F8F5F5"
    app:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="false"
    card_view:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/tvEdadaRellenar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.933"
            card_view:layout_constraintStart_toEndOf="@+id/ivPlayer"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="Edad" />

        <TextView
            android:id="@+id/tvNombrePlayer2"
            android:layout_width="82dp"
            android:layout_height="19dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textAlignment="center"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.486"
            card_view:layout_constraintStart_toEndOf="@+id/ivPlayer"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPosicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posicion:"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/ivPlayer"
            card_view:layout_constraintTop_toBottomOf="@+id/tvNombrePlayer2"
            card_view:layout_constraintVertical_bias="0.234" />

        <ImageView
            android:id="@+id/ivPlayer"
            android:layout_width="115dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/img_1" />

        <TextView
            android:id="@+id/tvEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad:"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.618"
            card_view:layout_constraintStart_toEndOf="@+id/tvPosicion"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.507" />

        <TextView
            android:id="@+id/tvPosicionarellenar"
            android:layout_width="104dp"
            android:layout_height="20dp"
            android:text="TextView"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/tvEdad"
            card_view:layout_constraintHorizontal_bias="0.352"
            card_view:layout_constraintStart_toEndOf="@+id/tvPosicion"
            card_view:layout_constraintTop_toBottomOf="@+id/tvNombrePlayer2"
            card_view:layout_constraintVertical_bias="0.255" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="91dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvnombreTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="7dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvPosicion"
            app:layout_constraintTop_toBottomOf="@+id/tvPosicionarellenar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>